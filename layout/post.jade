include _views/post
include _views/menu
extends _views/main

block main
  +post(page, 'post')
  
  if theme.reward_image
    section.reward 
      a(class="btn-reward" href="#") 打赏
      div.reward-wrapper.clearfix
        img(src = theme.reward_image)

  if theme.disqus_shortname && page.comments && !env.debug
    div.comments
      div#disqus_thread
        noscript.
          Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a>

block head
  title
    = page.title + ' - ' + config.title

block menu
  +menu('post')
